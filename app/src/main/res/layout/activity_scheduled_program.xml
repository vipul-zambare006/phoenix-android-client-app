<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
tools:context=".radioprogram.android.ui.MaintainProgramScreen">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Name"
    tools:text="Program Name" />

<EditText
    android:id="@+id/radio_program_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Radio Program Name" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="DateOfProgram"
    tools:text="Date Of Program" />

<EditText
    android:id="@+id/date_of_program"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Date Of Program" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="StartTime"
    tools:text="Start Time" />

<EditText
    android:id="@+id/start_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="StartTime" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Duration"
    tools:text="Duration" />

<EditText
    android:id="@+id/duration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="10"
    android:text="00:30:00"
    tools:text="00:30:00" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Presenter"
    tools:text="Presenter" />

<EditText
    android:id="@+id/presenter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="15"
    android:text="Presenter"
    tools:text="Presenter" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Producer"
    tools:text="Producer" />

<EditText
    android:id="@+id/producer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="15"
    android:text="Producer"
    tools:text="Producer" />
</LinearLayout>