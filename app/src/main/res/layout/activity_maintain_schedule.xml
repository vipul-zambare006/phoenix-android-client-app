<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".maintainschedule.android.ui.ScheduleScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Radio Program"
        tools:text="Select Radio Program" />

    <Button
        android:id="@+id/programName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here" />

    <TextView
        android:id="@+id/maintain_schedule_selected_programName_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Radio Program"
        tools:text="Selected Radio Program" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Presenter and Producer"
        tools:text="Select Presenter and Producer" />

    <Button
        android:id="@+id/presenter_producer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here" />

    <TextView
        android:id="@+id/maintain_schedule_selected_Presenter_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Presenter"
        tools:text="Selected Radio Program" />

    <TextView
        android:id="@+id/maintain_schedule_selected_producer_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected  Producer"
        tools:text="Selected Producer" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Date"
        tools:text="Enter Date" />

    <EditText
        android:id="@+id/maintain_schedule_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Mar 6, 2010" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Time"
        tools:text="Enter Time" />

    <EditText
        android:id="@+id/maintain_schedule_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="8"
        android:text="00:30:00"
        tools:text="00:30:00" />

</LinearLayout>

